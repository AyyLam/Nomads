<h1 class="title">Review Form </h1>
<div class="signin">


<%= form_for @review do |f| %>
<br>
<%= f.label :truck %>
<br>
<%= f.collection_select :truck_id, Truck.all, :id, :name, prompt: "Select a truck"%>
<br>
  <i> "Don't see your truck? Click here to add a new truck.</i>
<br>
<%= link_to '<button type ="button"> New Truck</button>'.html_safe, new_truck_path %>
<br>
<%= f.label :rating %>
<br>
<%= f.number_field :rating, placeholder: "1-5", min: 1, max: 5 , class: "formlabel"%>
<br>
<%= f.label :content %>
<br>
<%= f.text_area :content, size: "60x12", placeholder: "What do you want to say?", class: "formlabel" %>
<br>
<br>
<%= f.file_field :image %>
<br>
<br>
<%= f.submit "Post", class: "submit" %>
<% end %>
</div>
