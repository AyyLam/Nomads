 <h1 class="title"><%= @user.name %></h1>
 <div class="link">
    <%= link_to "Create A New Review", new_review_path %>
 </div>

  <h2>My Reviews</h2>
  <div class="grid-container">
  <% @user.most_recent.each do |review| %>
    <div class="grid-item">
      <h2><%= link_to review.truck.name, truck_path(review.truck) %></h2>
      <br>
      My rating: <%= review.rating  %>
      <br>
      <% if @curr_user == @user %>
        <%= link_to "Edit", edit_review_path(review)%>
        <%= link_to "Delete", review_path(review), :data => {:confirm => "You sure?", :method => "delete"} %>
      <% end %>
    </div>

    <div class="grid-item">
      <%= review.content %>
    </div>

    <div class="grid-item">
        <%= image_tag (review.image.url) if review.image? %>
    </div>
    <% end %>
</div>


</ul>
